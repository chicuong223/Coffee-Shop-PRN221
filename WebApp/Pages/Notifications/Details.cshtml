@page
@model Pages.Notifications.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notification.IsRead)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notification.IsRead)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notification.NotificationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notification.NotificationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notification.SenderNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notification.SenderNavigation.Username)
        </dd>
    </dl>
</div>

<!-- table to display notification detail -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].Notification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].Product)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Details) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notification.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Notification.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
