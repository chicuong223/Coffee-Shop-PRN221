@page
@model WebApp.Pages.Notifications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notification.Id" />
            <div class="form-group">
                <label asp-for="Notification.Sender" class="control-label"></label>
                <select asp-for="Notification.Sender" class="form-control" asp-items="ViewBag.Sender"></select>
                <span asp-validation-for="Notification.Sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.IsRead" class="control-label"></label>
                <input asp-for="Notification.IsRead" class="form-control" />
                <span asp-validation-for="Notification.IsRead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.NotificationDate" class="control-label"></label>
                <input asp-for="Notification.NotificationDate" class="form-control" />
                <span asp-validation-for="Notification.NotificationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
