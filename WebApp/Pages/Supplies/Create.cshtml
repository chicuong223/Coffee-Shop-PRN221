@page
@model Pages.Supplies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Supply</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Supply.ProductId" value="@Model.Product.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" readonly/>
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.SupplierId" class="control-label"></label>
                <select asp-for="Supply.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Supply.SupplyDate" class="control-label"></label>
                <input name="SupplyDate" @*asp-for="Supply.SupplyDate"*@ class="form-control" value="@Model.Now" readonly/>
                <span asp-validation-for="Supply.SupplyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.Quantity" class="control-label"></label>
                <input asp-for="Supply.Quantity" class="form-control" />
                <span asp-validation-for="Supply.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
