@page
@using X.PagedList.Mvc.Core
@model WebApp.Pages.Staff.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Username">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Username">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Username">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br />
Page @(Model.Staff.PageCount < Model.Staff.PageNumber ? 0 : Model.Staff.PageNumber) of @Model.Staff.PageCount

@Html.PagedListPager( Model.Staff, pageIndex => Url.Page("Index", new { pageIndex }) )
