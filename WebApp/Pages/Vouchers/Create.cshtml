@page
@model Pages.Vouchers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Voucher</h4>
<h4 class="text-danger">@Model.Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voucher.Id" class="control-label"></label>
                <input asp-for="Voucher.Id" class="form-control" />
                <span asp-validation-for="Voucher.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Name" class="control-label"></label>
                <input asp-for="Voucher.Name" class="form-control" />
                <span asp-validation-for="Voucher.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Description" class="control-label"></label>
                <input asp-for="Voucher.Description" class="form-control" />
                <span asp-validation-for="Voucher.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Percentage" class="control-label"></label>
                <input asp-for="Voucher.Percentage" class="form-control" />
                <span asp-validation-for="Voucher.Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.ExpirationDate" class="control-label"></label>
                <input asp-for="Voucher.ExpirationDate" class="form-control" />
                <span asp-validation-for="Voucher.ExpirationDate" class="text-danger"></span>
                <span class="text-danger">@TempData["Error"]</span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.UsageCount" class="control-label"></label>
                <input asp-for="Voucher.UsageCount" class="form-control" value="0" />
                <span asp-validation-for="Voucher.UsageCount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Voucher.Status" /> @Html.DisplayNameFor(model => model.Voucher.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
