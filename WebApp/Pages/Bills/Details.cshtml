@model Pages.Bills.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.BillDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.BillDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.StaffUsernameNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.StaffUsernameNavigation.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.Voucher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.Voucher.Id)
        </dd>
    </dl>
</div>

<!-- Table for bill details -->
<a asp-page="../BillDetails/Create" asp-route-billId="@Model.Bill.Id">Create new detail</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bill.BillDetails[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill.BillDetails[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill.BillDetails[0].SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill.BillDetails[0].Bill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill.BillDetails[0].Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bill.BillDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bill.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Bill.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
