@page
@model Pages.Bills.DetailsModel

@{
    ViewData["Title"] = "Bill Details";
}

<h1>Bill Details</h1>

<div>
    <h4>Bill</h4>
    <hr />
    <h5 class="text-danger">@TempData["BillError"]</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.BillDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.BillDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.Discount) (%)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.Voucher.Percentage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.StaffUsernameNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.StaffUsernameNavigation.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bill.Voucher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bill.Voucher.Id)
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details[0].Product)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            <tr>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.UnitPrice
                </td>
                <td>
                    @item.SubTotal
                </td>
                <td>
                    @item.Product.ProductName
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (Model.Bill.Status.Value == false)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Bill.Id">Edit</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
